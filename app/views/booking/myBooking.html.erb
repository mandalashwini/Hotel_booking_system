 <body >
 <head>
    <%= stylesheet_link_tag    'booking', media: 'all', 'data-turbolinks-track': 'reload' %>

</head>
<div class="my Bookings">
 	<div class="row">
        <div class="col s12 m6">
          <div class="card white">
            <div class="card-content">
                  <span class="card-title">Booking Details</span>
                        <span>Booking Details</span>
                        <table>
                              <tr>
                              <th>Checkin Date</th>
                              <th >Checkout Date</th>
                              <th >Booking Date</th>
                             </tr>
                            <tr>
                            <td><%= @booking.checkinDate %></td>
                            <td><%= @booking.checkoutDate %></td>
                            <td><%= @booking.bookingDate %></td>
                           </tr>
                        </table>
    
                      <hr>
                   <span >Hotel Details</span>
                    <table>
                    <tr>
                      <th>Hotel Name</th>
                      <th >Location</th>
                      <th >Rating</th>
                    </tr>
                     <%@hotelDetails.each do |result| %>
                      <tr>
                        <td><%= result.name %></td>
                        <td><%= result.location %></td>
                        <td><%= result.rating %></td>
                      </tr>
                    <% end %>   
                    </table> 
                    <hr>  
                    <span>Rooms Details</span>        
                <table>
                <tr>
                   <th>Room Price</th>
                  <th >Number of Bedrooms</th>
                  <th >Room Type</th>
                </tr>
                 <% @roomDetails.each do |result| %>
                  <tr>
                    <td><%= result.room_price %></td>
                    <td><%= result.number_bedrooms %></td>
                    <td><%= result.room_type %></td>
                  </tr>
                <% end %>
              </table>

 	          </div>
        </div>
    </div>
</div>
</div>