
 <head>
   <%= stylesheet_link_tag 'search', media: 'all', 'data-turbolinks-track': 'reload' %>
   </head>


    <%= form_tag({:controller=> "booking", :action=>"confirmBooking"},:method=>"get")do %>
   
<body>
  <div class="row">
        <div class="col s12 m6">
          <div class="card white">
            <div class="card-content">
              <span class="card-title">Rooms List</span>
  
                        <table>
                          <tr>
                            <th></th>
                            <th>Room Price</th>
                            <th >Number of Bedrooms</th>
                            <th >Room Type</th>
                            
                          </tr>
                           <% @searchRoomResult.each do |result| %>
                            <tr>
                              <td><%= check_box_tag "result1[]",result.id %>  </td>
                              <td><%= result.room_price %></td>
                              <td><%= result.number_bedrooms %></td>
                              <td><%= result.room_type %></td>
                             
                            </tr>
                          <% end %>
                        </table>
                      <br>
                      <%= submit_tag "Book Now", class: "btn btn-large btn-primary search-button" %>
                </div>
             </div>
          </div>
        </div>
      </div>
<div style="width: 10%; margin: auto;text-align: center;color: black">
  <%= paginate @searchRoomResult %>
</body>
<% end %>