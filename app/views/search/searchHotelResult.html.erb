 <head>
      <%= stylesheet_link_tag 'search', media: 'all', 'data-turbolinks-track': 'reload' %>

 </head>
 <div class="row">
        <div class="col s12 m6">
          <div class="card white">
            <div class="card-content">
              <span class="card-title">Hotels List</span>
                  <table>
                  <tr>
                    <th>Hotel Name</th>
                    <th >Location</th>
                  </tr>

                  <%@searchHotelResult.each do |result| %>
                  <tr>
                    <td><%= result.name %></td>
                    <td><%= result.location %></td>
                     <td><%= link_to 'show', search_path(result) %></td>
                  </tr>
                <% end %>
              </table>
              
            </div>
          </div>
        </div>
      </div>
      <%= paginate @searchHotelResult %>      
</body>